        <record id="daily_income_report" model="ir.actions.report">
            <field name="name">Daily Income Report</field>
            <field name="model">daily.income.report</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">redeemly_pin_management.daily_income_report_template</field>
            <field name="report_file">redeemly_pin_management.daily_income_report_template</field>
            <field name="print_report_name">'Daily Income Report %s.pdf' %(object.report_date)</field>
            <field name="attachment">'Daily Income Report %s.pdf' %(object.report_date)</field>
        </record>
        <template id="daily_income_report_template">
            <t t-call="web.html_container">

            <t t-foreach="docs" t-as="o">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-if="not o" t-set="o" t-value="doc"/>

                    <t t-if="not company">
                        <!-- Multicompany -->
                        <t t-if="company_id">
                            <t t-set="company" t-value="company_id"/>
                        </t>
                        <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                            <t t-set="company" t-value="o.company_id.sudo()"/>
                        </t>
                        <t t-else="else">
                            <t t-set="company" t-value="res_company"/>
                        </t>
                    </t>

                    <div class="header">
                        <div class="row">
                            <div class="col-3">
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                            </div>
                        </div>
                    </div>
                    <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                        <div class="page">
                            <h2>
                                <span>Daily Income Report</span>
                                <span>For Date: </span><span t-esc="o.report_date.strftime('%Y-%m-%d')"/>
                            </h2>
                            <table class="table table-sm o_main_table" name="invoice_line_table">
                                <thead>
                                    <tr>
                                        <th name="th_name" class="text-left"><span>Service Provider Name</span></th>
                                        <th name="th_priceunit" t-attf-class="text-right"><span>Total Income</span></th>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <t t-set="total_value" t-value="0" />
                                    <t t-foreach="data" t-as="line">

                                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' 'font-italic o_line_note' ">
                                            <t name="account_invoice_line_accountable">
                                                <td name="account_invoice_line_name"><span t-esc="line['name']" t-options="{'widget': 'text'}"/></td>
                                                <td class="text-right o_price_total">
                                                    <span class="text-nowrap" t-esc="str(line['amount_total'])+ '$'" />
                                                </td>
                                            </t>
                                        </tr>
                                        <t t-set="total_value" t-value="total_value + line['amount_total']" />
                                        <tr t-att-class="'bg-200' 'font-italic o_line_note' "
                                        t-foreach="o._daily_income_report_get_line(line['service_provider_id'])"
                                            t-as="merchant_line"
                                        >
                                            <td class="padding-left: 20px" name="account_invoice_line_name"><span t-esc="merchant_line['name']" t-options="{'widget': 'text'}"/></td>
                                            <td class="text-right o_price_total">
                                                <span class="text-nowrap" t-esc="str(merchant_line['amount_total'])+ '$'" />
                                            </td>
                                        </tr>
                                    </t>
                                    <div class="clearfix">
                                        <div id="total" class="row">
                                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                                <table class="table table-sm" style="page-break-inside: avoid;">
                                                    <tr class="border-black o_subtotal">
                                                        <td><strong t-esc="'Total Amount'"/></td>
                                                        <td class="text-right o_price_total">
                                                            <b>
                                                            <span
                                                                t-esc="str(total_value)+ '$'"
                                                            />
                                                            </b>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>

