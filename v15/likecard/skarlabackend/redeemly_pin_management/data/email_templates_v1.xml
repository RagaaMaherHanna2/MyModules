        <template id="invoice_merchant_template">
            <t t-call="web.html_container">

                <t t-foreach="docs" t-as="o">
                    <t t-set="o" t-value="o.with_context(lang=lang)"/>
                    <t t-if="not o" t-set="o" t-value="doc"/>

                    <t t-if="not company">
                        <!-- Multicompany -->
                        <t t-if="company_id">
                            <t t-set="company" t-value="company_id"/>
                        </t>
                        <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                            <t t-set="company" t-value="o.company_id.sudo()"/>
                        </t>
                        <t t-else="else">
                            <t t-set="company" t-value="res_company"/>
                        </t>
                    </t>


                    <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
                         t-att-data-oe-lang="o and o.env.context.get('lang')">
                        <div class="page">

                            <div style="flex: 1; padding: 0 40px; height:230px">

                                <div style="width: 50%; float: left;">
                                    <img style="max-width:128px;max-height:128px"
                                         t-att-src="image_data_uri(o.service_provider_id.image_1920) if o.service_provider_id.image_1920 else False"/>
                                    <p>
                                        <b t-esc="o.service_provider_id.name"></b>
                                    </p>
                                </div>
                                <div style="width: 50%; float: right; padding-top: 50px;">
                                    <h2 style="float: right; ">
                                        <span>Invoice</span>
                                        <span t-esc="str(o.request_date.year) + '/' + str(o.invoice_number)"/>
                                    </h2>
                                </div>

                            </div>


                            <div style="flex: 1; padding: 0 25px;">
                                <div style="padding: 0 25px;">
                                    <div style="width: 50%; float: left;">
                                        <h6 style="line-height: 1.8;">

                                            <span style="font-size: 14px;">Invoice to:</span>
                                            <span style="font-size: 14px;" t-esc="o.merchant.name"/>
                                            <br/>

                                        </h6>
                                    </div>
                                    <div style="width: 50%; float: right;">
                                        <h6 style="line-height: 1.8;float: right;">
                                            <span style="font-size: 14px;">From Date:
                                                <span style="font-size: 14px;"
                                                      t-esc="o.from_date.strftime('%Y-%m-%d') + ' 00:00:00'"/>
                                            </span>
                                            <br/>
                                            <span style="font-size: 14px;">To Date:</span>
                                            <span style="font-size: 14px;"
                                                  t-esc="o.to_date.strftime('%Y-%m-%d') + ' 23:59:59 UTC'"/>
                                            <br/>
                                        </h6>
                                    </div>
                                </div>
                            </div>


                            <table style=" width: 90%; border-collapse: collapse; line-height: 2; margin-left: 40px;  margin-right: 40px;"
                                   class="table table-sm o_main_table" name="invoice_line_table">

                                <thead>
                                    <tr>
                                        <th style=" border: 1px solid;" name="th_description" class="text-left">
                                            <span>Description</span>
                                        </th>
                                        <th style=" border: 1px solid;" name="th_quantity" class="text-right">
                                            <span>Quantity</span>
                                        </th>
                                        <th style=" border: 1px solid;" name="th_priceunit" t-attf-class="text-right">
                                            <span>Unit Price</span>
                                        </th>
                                        <th style=" border: 1px solid;" name="th_tax" t-attf-class="text-right">
                                            <span>Tax</span>
                                        </th>
                                        <th style=" border: 1px solid;" name="th_priceunit" t-attf-class="text-right">
                                            <span>Total Price</span>
                                        </th>

                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <t t-set="total_value" t-value="0"/>
                                    <t t-set="total_tax" t-value="0"/>
                                    <t t-foreach="data" t-as="line">

                                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' 'font-italic o_line_note' ">
                                            <t name="account_invoice_line_accountable">
                                                <td style="border: 1px solid; text-align:center"
                                                    name="account_invoice_line_name">
                                                    <span t-esc="line['name']" t-options="{'widget': 'text'}"/>
                                                </td>
                                                <td style="border: 1px solid; text-align:center">
                                                    <span t-esc="line['quantity_subtotal']"/>
                                                </td>
                                                <td style="border: 1px solid; text-align:right; padding-right:10px"
                                                    t-attf-class="text-right">
                                                    <span class="text-nowrap"
                                                          t-esc="str(line['price_unit']) +' '+ o.get_sp_currency()"/>
                                                </td>
                                                <td style="border: 1px solid; text-align:right; padding-right:10px"
                                                    t-attf-class="text-right">
                                                    <t t-if="str(line['merchant_tax']) != None">
                                                        <span class="text-nowrap" t-esc="str(line['merchant_tax'])"/>
                                                    </t>
                                                    <t t-if="str(line['merchant_tax']) == None">
                                                        <span class="text-nowrap"/>
                                                    </t>

                                                </td>
                                                <td style="border: 1px solid; text-align:right; padding-right:10px">
                                                    <span class="text-nowrap"
                                                          t-esc="str(line['price_subtotal'])+' '+ o.get_sp_currency()"/>
                                                </td>
                                            </t>
                                        </tr>
                                        <t t-set="total_value" t-value="total_value + line['price_subtotal']"/>
                                        <t t-set="total_tax" t-value="total_tax + line['price_tax']"/>

                                    </t>
                                    <div class="clearfix">
                                        <div id="total" class="row">
                                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                                <table style="float: right; margin-top: 0px;line-height: 1; margin-right:40px;">

                                                    <tr style="font-size:12px;">
                                                        <td style="font-weight:bold; padding:6px;">
                                                            <strong t-esc="'Total Untaxed Amount'"/>
                                                        </td>
                                                        <td style="padding:6px; text-align:right;  border-bottom: 1pt solid black;">
                                                            <b>
                                                                <span t-esc="str(total_value)+' '+o.get_sp_currency()"/>
                                                            </b>
                                                        </td>
                                                    </tr>

                                                    <tr style="font-size:12px;">
                                                        <td style="font-weight:bold;padding:6px;">
                                                            <strong t-esc="'Total Tax'"/>
                                                        </td>
                                                        <td style="padding:6px; text-align:right;  border-bottom: 1pt solid black;"
                                                            class="text-right o_price_total">
                                                            <b>
                                                                <span t-esc="str(total_tax)+' '+o.get_sp_currency()"/>
                                                            </b>
                                                        </td>
                                                    </tr>

                                                    <tr style="font-size:16px;">
                                                        <td style="font-weight:bold; padding:6px;">
                                                            <strong t-esc="'Total Amount'"/>
                                                        </td>
                                                        <td style="padding:6px; text-align:right;  border-bottom: 1pt solid black;">
                                                            <b>
                                                                <span t-esc="str(total_value + total_tax)+' '+o.get_sp_currency()"/>
                                                            </b>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </t>
            </t>
        </template>

