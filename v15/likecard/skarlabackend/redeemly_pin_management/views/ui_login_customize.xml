<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="login_layout_skarla" inherit_id="web.login_layout" name="Website Login Layout Skarla" priority="20">
        <xpath expr="//div//div//div//div[2]" position="replace">
            <span></span>
        </xpath>
    </template>

    <template id="auth_signup.login" inherit_id="web.login" name="Sign up - Reset Password">
        <xpath expr="//button[@type='submit']" position="after">
                <div class="justify-content-between mt-2 d-flex small">
                    <span></span>
                </div>
            </xpath>
    </template>
</odoo>