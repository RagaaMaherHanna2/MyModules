<odoo>
    <record id="view_rejection_wizard_form" model="ir.ui.view">
        <field name="name">view.rejection.wizard.form</field>
        <field name="model">rejection.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Reason">
                <sheet>
                    <group>
                        <field name="rejection_reason" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Reject" name="reject_action" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>